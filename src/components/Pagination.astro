---
import { getCollection } from "astro:content";
type Props = {
  page: number;
  postPerPage?: number;
  numberOfPosts: number;
};

const { page, postPerPage = 10, numberOfPosts } = Astro.props;
const hasPreviousPosts = page > 1;
const hasNextPosts = numberOfPosts > page * postPerPage;
---

<div class="flex justify-between">
  {
    hasPreviousPosts ? (
      <a
        href={`?page=${page - 1}`}
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl"
      >
        Previous
      </a>
    ) : (
      <div />
    )
  }
  {
    hasNextPosts ? (
      <a
        href={`?page=${page + 1}`}
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl"
      >
        Next
      </a>
    ) : (
      <div />
    )
  }
</div>
